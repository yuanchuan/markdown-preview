#!/usr/bin/env node

var open   = require('open')
  , path   = require('path')
  , watch  = require('node-watch')
  , fs     = require('fs');

var server = require('../lib/server')
  , check  = require('../lib/check')
  , stamp  = require('../lib/stamp');

var filename = process.argv[2] || ''
  , port     = 3333;

check(filename)
  .accept(['md', 'markdown', 'html'])
  .pass(function(name) {
    watch(name, function() {
      stamp.update();
      console.log('%s changed.', name);
    });
    server.startAt(port, function(res) {
      open('http://localhost:' + port + '/' + name);
      res && process.exit();
    });
  })
  .fail(function(name) {
    if (name) {
      console.log('Error: Please open a valid markdown file.');
    } else {
      console.log('Usage:  markdown-preview <filename>');
    }
  });
